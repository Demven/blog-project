    "@angular/forms": "2.4.9",
    "@angular/http": "2.4.9",
    "@angular/platform-browser": "2.4.9",
    "@angular/platform-browser-dynamic": "2.4.9",
    "@angular/router": "3.4.9",
    "body-parser": "^1.17.2",
    "codelyzer": "^3.0.0-beta.0",
    "compression": "^1.7.0",
    "cookie-parser": "^1.4.3",
    "core-js": "2.4.1",
    "express": "^4.15.3",
    "postcss": "5.2.15",
    "postcss-cssnext": "2.9.0",
    "redux": "^3.6.0",
    "rxjs": "5.2.0",
    "tslint": "^4.5.1",
    "zone.js": "0.7.7"
  },
