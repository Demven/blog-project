    "@types/cookie-parser": "^1.3.30",
    "@types/express": "^4.0.36",
    "@types/node": "7.0.5",
    "angular2-template-loader": "0.6.2",
    "awesome-typescript-loader": "3.0.8",
    "cpy-cli": "^1.0.1",
    "css-loader": "0.26.2",
    "extract-text-webpack-plugin": "2.0.0",
    "file-loader": "0.10.1",
