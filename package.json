{
  "name": "dmitry-salnikov-blog-project",
  "version": "0.0.0",
  "description": "Personal blog",
  "scripts": {
    "dev": "webpack-dev-server --inline --progress --port 8080",
    "start": "NODE_ENV=production npm run build && node dist/server/app.js",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:client && npm run build:server && npm run build:images",
    "build:client": "webpack --progress --profile --bail",
    "build:server": "tsc server/*.ts --outDir dist/server",
    "build:images": "cpy public/images/* dist/client/public/images",
    "lint:styles": "stylelint src/**/*.pcss",
    "lint:ts": "tslint -c tslint.json src/**/*.ts"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@angular-redux/store": "^6.4.0",
