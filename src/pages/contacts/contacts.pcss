@import '../../../public/styles/typography.pcss';
@import '../../../public/styles/colors.pcss';
@import '../../../public/styles/media.pcss';

.Contacts {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;

  & .Contacts__content {
    display: flex;
    align-items: center;
    flex-direction: column;
    margin-top: 2em;

    @media (--media-mobile-any) {
      padding: 0 1.2em;
    }

    @media (--media-tablet-any) {
      padding: 0 4em;
    }

    @media (--media-desktop-any) {
      padding: 0 8em;
    }
  }
}
